{
  "source": [
    "properties/**/*.json"
  ],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "prefix": "bx",
      "buildPath": "build/css/",
      "files": [
        {
          "format": "css/variables",
          "destination": "bx_variables.css"
        }
      ]
    },
    "scss": {
      "transformGroup": "scss",
      "prefix": "bx",
      "buildPath": "build/scss/",
      "files": [{
        "destination": "_bx_variables.scss",
        "format": "scss/variables"
      }]
    },
    "js": {
      "transformGroup": "js",
      "prefix": "bx",
      "buildPath": "build/js/",
      "files": [{
        "destination": "bx_variables.js",
        "format": "javascript/module"
      },
      {
        "destination": "bx_es_variables.js",
        "format": "javascript/es6"
      }]
    },
    "json/asset": {
      "transforms": ["attribute/cti", "name/cti/camel", "asset/base64"],
      "buildPath": "build/assets/",
      "files": [{
        "destination": "assets.json",
        "format": "json/asset"
      }]
    },
    "assets/copy": {
      "transformGroup": "assets",
      "buildPath": "build/",
      "actions": ["copy_assets"]
    }
  }
}
